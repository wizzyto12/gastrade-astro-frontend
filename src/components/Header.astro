---
import {siteName} from "~/data/config";
---

<header class="sticky top-0 z-50 border-b border-zinc-200 bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60">
    <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-3 sm:py-4">
        <a href="#" class="flex items-center gap-2 font-semibold tracking-tight">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" class="shrink-0">
                <circle cx="12" cy="12" r="10" class="fill-violet-600"/>
                <path d="M7 13.5h7.5M9 10.5h8" class="stroke-white" stroke-width="1.8" stroke-linecap="round"/>
            </svg>
            <span class="text-lg">{siteName}</span>
        </a>
        <nav class="hidden items-center gap-6 md:flex">
            <a href="#services" class="text-sm text-zinc-700 hover:text-zinc-900">Услуги</a>
            <a href="#portfolio" class="text-sm text-zinc-700 hover:text-zinc-900">Портфолио</a>
            <a href="#pricing" class="text-sm text-zinc-700 hover:text-zinc-900">Цени</a>
            <a href="#faq" class="text-sm text-zinc-700 hover:text-zinc-900">ЧЗВ</a>
            <a href="#contact" class="text-sm text-zinc-700 hover:text-zinc-900">Контакти</a>
        </nav>
        <div class="hidden md:block">
            <a
                href="#quote"
                class="inline-flex items-center gap-2 rounded-xl bg-yellow-400 px-4 py-2 text-sm font-semibold text-zinc-900 shadow hover:bg-yellow-300"
            >
                <span>Получи оферта</span>
            </a>
        </div>
        <button class="md:hidden" aria-label="Още меню" id="mobileMenuBtn">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none">
                <path d="M4 6h16M4 12h16M4 18h16" class="stroke-zinc-900" stroke-width="2" stroke-linecap="round"/>
            </svg>
        </button>
    </div>
    <!-- Mobile menu -->
    <div id="mobileMenu" class="hidden border-t border-zinc-200 bg-white md:hidden">
        <nav class="mx-auto max-w-7xl px-4 py-3">
            <ul class="flex flex-col gap-2">
                <li>
                    <a href="#services" class="block rounded-lg px-3 py-2 hover:bg-zinc-50">Услуги</a>
                </li>
                <li>
                    <a href="#portfolio" class="block rounded-lg px-3 py-2 hover:bg-zinc-50">Портфолио</a>
                </li>
                <li>
                    <a href="#pricing" class="block rounded-lg px-3 py-2 hover:bg-zinc-50">Цени</a>
                </li>
                <li>
                    <a href="#faq" class="block rounded-lg px-3 py-2 hover:bg-zinc-50">ЧЗВ</a>
                </li>
                <li>
                    <a href="#contact" class="block rounded-lg px-3 py-2 hover:bg-zinc-50">Контакти</a>
                </li>
                <li>
                    <a
                        href="#quote"
                        class="mt-2 inline-flex w-full items-center justify-center gap-2 rounded-xl bg-yellow-400 px-4 py-2 text-sm font-semibold text-zinc-900 shadow hover:bg-yellow-300"
                    >Получи оферта
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>
